<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Dialog
        id="workflowParameters"
        title="WF Send Document"
        stretch="false"
        contentWidth="50%"
        class="sapUiContentPadding"
        core:require="{ handler: 'zcebyclerk/ext/controller/customAction'}"
    >
        <content>
            <VBox id="_IDGenVBox1">
                <Label
                    id="_IDGenLabel"
                    labelFor="cbWFID"
                    text="Workflow ID"
                />
                <ComboBox
                    id="cbWFID"
                    editable="true"
                    selectionChange="handler.onWorkflowIDSelected"
                    items="{ path: '/WorkflowHeader'}"
                    width="40%"
                >
                    <core:Item
                        id="_IDGenItem"
                        key="{WcId}"
                        text="{WcDescr}"
                    >
                        <core:customData>
                            <core:CustomData
                                key="dueDays"
                                value="{WcDueDays}"
                            />
                        </core:customData>
                    </core:Item>
                </ComboBox>
                <Label
                    id="_IDGenLabel2"
                    labelFor="idWFDueDate"
                    text="Due Date"
                />
                <DatePicker
                    id="idWFDueDate"
                    width="40%"
                />
                <Table
                    width="100%"
                    headerText="Workflow Steps"
                    id="workflowStepsTable"
                    items="{stepsModel>/Steps}"
                    mode="SingleSelectMaster"
                    selectionChange="handler.onStepSelectionChange"
                >
                    <columns>
                        <Column id="_IDGenColumn3">
                            <Text
                                id="_IDGenText7"
                                text="OK"
                            />
                        </Column>
                        <Column id="_IDGenColumn2">
                            <Text
                                id="_IDGenText4"
                                text="Position"
                            />
                        </Column>
                        <Column id="_IDGenColumn">
                            <Text
                                id="_IDGenText"
                                text="Step ID"
                            />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem id="_IDGenColumnListItem">
                            <cells>
                                <core:Icon
                                    id="_IDGenIcon"
                                    src="sap-icon://media-play"
                                />
                                <Text
                                    id="_IDGenText5"
                                    text="{stepsModel>Pos}"
                                />
                                <Text
                                    id="_IDGenText1"
                                    text="{stepsModel>StepId}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                <Table
                    width="100%"
                    headerText="Workflow Receivers"
                    id="workflowReceiversTable"
                    items="{receiversModel>/Receiver}"
                >
                    <columns>
                        <Column id="_IDGenColumn1">
                            <Text
                                id="_IDGenText3"
                                text="Type"
                            />
                        </Column>
                        <Column id="_IDGenColumn5">
                            <Text
                                id="_IDGenText6"
                                text="Receiver"
                            />
                        </Column>

                        <Column id="_IDGenColumn6">
                            <Text
                                id="_IDGenText8"
                                text="Full Name"
                            />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem id="_IDGenColumnListItem1">
                            <cells>
                                <Text
                                    id="_IDGenText9"
                                    text="{receiversModel>Type}"
                                />
                                <Text
                                    id="_IDGenText10"
                                    text="{receiversModel>Receiver}"
                                />
                                <Text
                                    id="_IDGenText11"
                                    text="{receiversModel>FullName}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
        <beginButton>
            <Button
                id="_IDGenButton12"
                text="Send"
                type="Emphasized"
                press="handler.onSubmitWorkflow"
            />
        </beginButton>
        <endButton>
            <Button
                id="_IDGenButton13"
                text="Cancel"
                press="handler.onCancelWorkflowSend"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
